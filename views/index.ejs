<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Notes App</h1>
        </header>
        <form action="/add-note" method="post">
            <input type="text" name="title" placeholder="Note Title" required>
            <textarea name="body" rows="5" placeholder="Note Content" required></textarea>
            <button type="submit">Add Note</button>
        </form>
        <% if (notes.length > 0) { %>
            <div id="notesList">
                <% notes.forEach(function(note) { %>
                    <div class="note">
                        <h3><%= note.title %></h3>
                        <p><%= note.body %></p>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>No notes yet!</p>
        <% } %>
    </div>
</body>
</html>
